#!/bin/sh
#first - build the headers
autoheader

#next build the configuration
autoconf

#next configure
./runConfigure -m dbg # -c gnu6 -z -std=gnu++11 # -z -Wextra
#./runConfigure -m dbg -I /usr/local/Cellar/nlohmann_json/2.0.10/include -x /usr/local/Cellar/xerces-c/3.1.4

# build the code
cd ..
make clean && make clean_test && make depend && make all && make dist && make depend_test && make test

