		@echo "DIST_HEADER_DIR	: $(DIST_HEADER_DIR)"
		@echo "DIST_LIB_DIR   	: $(DIST_LIB_DIR)"
		@echo "DIST_BIN_DIR   	: $(DIST_BIN_DIR)"
		@echo "-------------------------------------------------------"
		@echo "CSLIB_INCL     	: $(CSLIB_INCL)"
		@echo "CSLIB_SYS_INCL 	: $(CSLIB_SYS_INCL)"
		@echo "CSLIB_DEF      	: $(CSLIB_DEF)"
