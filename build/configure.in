dnl # autoconf initialization
AC_INIT(cslib, 1.0.4, sanchez.chris@gmail.com)
AC_CONFIG_SRCDIR([../src/cslib.cpp])
AC_CONFIG_HEADER([config.h])

dnl Checks for programs.
#AC_PROG_CXX
#AC_PROG_CC
AC_CHECK_PROG(AUTOCONF, autoconf, autoconf, true)

# Checks for libraries.

# Checks for header files.

# Checks for typedefs, structures, and compiler characteristics.
AC_C_CONST
AC_STRUCT_TM

# Checks for library functions.
AC_HEADER_STDC
#AC_FUNC_MKTIME
AC_TYPE_SIGNAL
AC_CHECK_FUNCS([bzero gethostbyname gethostname memset mkdir socket strchr pthread_mutex_timedlock sem_timedwait])

dnl Determine the host system and Makefile fragment
AC_CANONICAL_HOST

dnl Platform-specific Makefile setup
echo "${host}"
case "${host}" in
        *-*-solaris*)	platform=SOLARIS ;;
        *-*-linux*)	platform=LINUX ;;
        *-cygwin*)	platform=CYGWIN ;;
        *-darwin*)	platform=MACOSX ;;
        *)		platform=UNKNOWN ;;
esac
AC_SUBST(platform)

cxx=${CXX}
AC_SUBST(cxx)

cc=${CC}
AC_SUBST(cc)

cxxflags=${CXXFLAGS}
AC_SUBST(cxxflags)

ldflags=${LDFLAGS}
AC_SUBST(ldflags)

libs=${LIBS}
AC_SUBST(libs)

includes=${INCLUDES}
AC_SUBST(includes)

mode=${MODE}
AC_SUBST(mode)

xerceshome=${XERCESHOME}
AC_SUBST(xerceshome)

xercesname=${XERCESNAME}
AC_SUBST(xercesname)

csliblocal=${CSLIB_PROJECT_LOCAL}
AC_SUBST(csliblocal)

